{
  "openapi": "3.0.2",
  "info": {
    "title": "Survey App",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Register": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "pattern": "^\\S+@\\S+\\.\\S+$"
          },
          "password": {
            "type": "string",
            "minLength": 3
          }
        },
        "example": {
          "email": "a@b.com",
          "password": "123456"
        }
      },
      "Login": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "pattern": "^\\S+@\\S+\\.\\S+$"
          },
          "password": {
            "type": "string",
            "minLength": 3
          }
        },
        "example": {
          "email": "a@b.com",
          "password": "123456"
        }
      },
      "CreateSurvey": {
        "type": "object",
        "required": ["closeTime", "question", "options"],
        "properties": {
          "closeTime": {
            "type": "string"
          },
          "question": {
            "type": "string"
          },
          "options": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "string"
            }
          }
        },
        "example": {
          "closeTime": "20/12/2022",
          "question": "What is your favorite color?",
          "options": ["Blue", "Red", "Green", "Yellow"]
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "tags": [
    {
      "name": "Auth"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register a new user",
        "description": "",
        "operationId": "register",
        "parameters": [],
        "requestBody": {
          "description": "",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Register"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "success": true,
                  "message": "operation was successful"
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Log in a user",
        "description": "",
        "operationId": "login",
        "parameters": [],
        "requestBody": {
          "description": "",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object",
                      "token": {
                        "type": "string"
                      }
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "success": true,
                  "data": {
                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJkYXRhIjp7Il9pZCI6IjdjZmY0ZjNiLTk0NTAtNGE3YS04ZDk2LTRmODM2MjZjZjEyMyJ9LCJpYXQiOjE2MzMzNjEyMjAsImV4cCI6MTYzMzM2NDgyMH0.FAF1b5f_OFi2-JmwiLr0sQRX2NxNfVb073gwoV6V068"
                  },
                  "message": "operation was successful"
                }
              }
            }
          }
        }
      }
    },
    "/surveys": {
      "post": {
        "tags": ["Survey"],
        "summary": "Create a new survey",
        "description": "",
        "operationId": "createSurvey",
        "parameters": [],
        "requestBody": {
          "description": "",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateSurvey"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object",
                      "_id": {
                        "type": "string"
                      }
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "success": true,
                  "data": {
                    "_id": "02928a66-46c6-4ae0-9189-cfc727642a96"
                  },
                  "message": "operation was successful"
                }
              }
            }
          }
        }
      }
    }
  }
}
