  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Register": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "pattern": "^\\S+@\\S+\\.\\S+$"
          },
          "password": {
            "type": "string",
            "minLength": 3
          }
        },
        "example": {
          "email": "a@b.com",
          "password": "123456"
        }
      },
      "Login": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "pattern": "^\\S+@\\S+\\.\\S+$"
          },
          "password": {
            "type": "string",
            "minLength": 3
          }
        },
        "example": {
          "email": "a@b.com",
          "password": "123456"
        }
      },
      "CreateSurvey": {
        "type": "object",
        "required": ["closeTime", "question", "options"],
        "properties": {
          "closeTime": {
            "type": "string"
          },
          "question": {
            "type": "string"
          },
          "options": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "string"
            }
          }
        },
        "example": {
          "closeTime": "20/12/2022",
          "question": "What is your favorite color?",
          "options": ["Blue", "Red", "Green", "Yellow"]
        }
      },
      "UpdateSurvey": {
        "type": "object",
        "required": ["closeTime"],
        "properties": {
          "closeTime": {
            "type": "string"
          }
        },
        "example": {
          "closeTime": "20/12/2022"
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
